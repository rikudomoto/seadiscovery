<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
   <div class="container">
       <a class="navbar-brand js-scroll-trigger" href="/">Sea Discovery</a>
   </div>
</nav>

<div class='item-contents'>
      <h2 class='title'>Seas</h2>
        <ul class='item-lists'>
          <%if @seas %>
          <% @seas.each do |sea| %>
            <li class='list'>
            <%= link_to home_path(sea.id) do %>
              <div class='item-img-content'>
              <%= image_tag sea.image, class: "item-img" if sea.image.attached? %>
              </div>
                <div class='item-info'>
                  <h3 class='item-name'>
                  <%= sea.seaname %>
                  </h3>
                    <div class='item-price'>
                    <span><%= sea.area.name %><br><%= sea.address %></span>
                    </div>
                </div>
                  <% end %>
                 <% end %>
                <% end %>
             </li>
          </ul>
          <div class="search-form">
    <h2 class= htitle>GoogleMapで見つけよう！</h2>
    
      <input id="address" class='input-box' placeholder='キーワードから探す' >
      <button class="search-button" onclick="codeAddress()">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </div>
</div>

 <%= render "shared/footer" %>